rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only allow public read & authenticated writes under /post_images/{uid}/...
    match /post_images/{userId}/{allPaths=**} {
      // Anyone (even unauthenticated) can read post images
      allow read: if true;

      // Only an authenticated user can upload/update/delete, and only in their own folder
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // Deny access to everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}